{% extends "::baseadmin.html.twig" %}

{% block title %}
    {{ parent() }} - Listing des différents niveaux
{% endblock %}

{% block sidebarmenu %}
    {{ include('FormationAdminBundle::sidebar-menu.html.twig',{ 'pseudo': 'Delphine'}) }}
{% endblock %}

 {% block headersection %}
     {{ include('FormationAdminBundle::header.html.twig') }}
 {% endblock %}

{% block body -%}
    <h1>Ajouter un nouveau niveau</h1>
    <div class="col-md-12">
        <div class="block">
            <div class="block-title">
                <div class="block-options pull-right">
                    <a href="{{ path('level') }}" class="btn btn-alt btn-sm btn-warning toggle-bordered enable-tooltip" title="Retourner à la liste"><i class="fa fa-arrow-left"></i> Retour à la liste</a>
                </div>
                <h2>Création d'un nouveau niveau</h2>
            </div>

            <form class="form-horizontal form-bordered" action="{{ path('level_create') }}" method="post" {{ form_enctype(form) }}>
                <div class="form-group">
                    {{ form_label(form.name, null, {'label_attr': {'class':'col-md-3 control-label'} }) }}
                    <div class="col-md-9">
                        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-actions">
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_widget(form.submit) }}
                    </div>
                </div>

                {{ form_widget(form._token) }}
            </form>

        </div>
    </div>
{% endblock %}
