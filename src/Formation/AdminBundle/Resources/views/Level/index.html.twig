{% extends "::baseadmin.html.twig" %}

{% block title %}
    {{ parent() }} - Listing des différents niveaux
{% endblock %}

{% block sidebarmenu %}
    {{ include('FormationAdminBundle::sidebar-menu.html.twig',{ 'pseudo': 'Delphine !!'}) }}
{% endblock %}

 {% block headersection %}
     {{ include('FormationAdminBundle::header.html.twig') }}
 {% endblock %}


{% block body %}
<div class="row">
    <div class="col-md-12">
        <!-- Block with Options -->
        <div class="block">
            <!-- Block with Options Title -->
            <div class="block-title">
                <div class="block-options pull-right">
                    <a type="submit" href="{{ path('level_new') }}" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i>Créer un nouveau statut</a>
                </div>
                <h2>Liste des différents niveaux</h2>
            </div>
            <!-- END Block with Options Title -->

            <!-- Block with Options Content -->
            <div class="block-content">

                <div class="table-responsive">
                    {{ addDataTable(dataTable,
                    {"language": {
                        'url': 'dataTables.french.lang'
                    }
                    }
                    ) }}
                </div>
            </div>
            <!-- END Block with Options Content -->
        </div>
        <!-- END Block with Options -->
    </div>
</div>
{% endblock %}

