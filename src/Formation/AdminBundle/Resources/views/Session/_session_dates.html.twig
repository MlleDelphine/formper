<table class="table table-striped table-borderless table-vcenter">
    <tbody>
    {% for sessionDate in sessionDates %}
        <tr>
            <td class="text-right col-md-1">
                Du
            </td>
            <td class="text-left col-md-5">
                {{ sessionDate.dateStart|date('d/m/Y') }} à <strong>{{ sessionDate.timeStart|date('H:i') }}</strong>
            </td>
            <td class="text-right col-md-1">
                au
            </td>
            <td class="text-left col-md-5">{{ sessionDate.dateEnd|date('d/m/Y') }} à <strong>{{ sessionDate.timeEnd|date('H:i') }}</strong></td>
        </tr>
    {% endfor %}
    </tbody>
</table>